<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:daemon="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/color_background_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
<LinearLayout   
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >           
			<ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/com_dp_15"
                android:layout_weight="2"
                android:src="@drawable/google"
                android:gravity="top|center_horizontal" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/com_dp_40"
        android:layout_marginTop="@dimen/com_dp_20"
        android:layout_weight="0.00" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/com_dp_40"
            android:layout_marginLeft="@dimen/com_dp_10"
            android:layout_marginRight="@dimen/com_dp_10"
            android:background="@drawable/login_text_background"
            android:gravity="center"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/id_search_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/com_dp_35"
                android:layout_marginLeft="@dimen/com_dp_90"
                android:background="@drawable/color_background_white"
                android:gravity="center_vertical"
                android:hint="@string/search_content"
                android:singleLine="true"
                android:textSize="@dimen/font_size_40" />

            <Button
                android:id="@+id/btn_search"
                android:layout_width="@dimen/com_dp_80"
                android:layout_height="@dimen/com_dp_35"
        		android:layout_marginTop="@dimen/com_dp_2"
        		android:layout_marginBottom="@dimen/com_dp_2"
                android:layout_marginRight="@dimen/com_dp_90"
                android:gravity="center"
                android:text="@string/btn_search"
                android:textColor="@color/button_fore_color_white"
                android:background="@color/background_color_search_btn"
                android:textSize="@dimen/font_size_40" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/com_dp_15"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/bt_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/com_dp_20"
            android:layout_marginRight="@dimen/com_dp_20"
            android:orientation="vertical"
            android:gravity="center" >

            <ImageView
                android:id="@+id/ib"
                android:layout_width="@dimen/com_dp_40"
                android:layout_height="@dimen/com_dp_40"
                android:src="@drawable/url" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_display_url" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bt_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/com_dp_20"
            android:layout_marginRight="@dimen/com_dp_20"
            android:orientation="vertical"
            android:gravity="center" >

            <ImageView
                android:id="@+id/ib_news"
                android:layout_width="@dimen/com_dp_40"
                android:layout_height="@dimen/com_dp_40"
                android:src="@drawable/news"
            	android:background="#00000000" />

            <TextView
                android:id="@+id/tv_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_display_news" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bt_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/com_dp_20"
            android:layout_marginRight="@dimen/com_dp_20"
            android:orientation="vertical"
            android:gravity="center" >

            <ImageView
                android:id="@+id/ib"
                android:layout_width="@dimen/com_dp_40"
                android:layout_height="@dimen/com_dp_40"
                android:src="@drawable/video" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_display_video" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/bt_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/com_dp_20"
            android:layout_marginRight="@dimen/com_dp_20"
            android:orientation="vertical"
            android:gravity="center" >

            <ImageView
                android:id="@+id/ib"
                android:layout_width="@dimen/com_dp_40"
                android:layout_height="@dimen/com_dp_40"
                android:src="@drawable/image" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_display_image" />
        </LinearLayout>
    </LinearLayout>
	
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/com_dp_15"
        android:layout_marginLeft="@dimen/com_dp_10"
        android:layout_marginRight="@dimen/com_dp_10"
        android:gravity="center"
        android:orientation="vertical" >

		<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/com_dp_10"
	        android:layout_marginRight="@dimen/com_dp_10"
	        android:gravity="left"
	        android:orientation="horizontal" >

			<TextView
			    android:id="@+id/textView1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="@string/Real_time_hot_spot" />
	
	    </LinearLayout>

		<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/com_dp_110"
	        android:layout_marginTop="@dimen/com_dp_10"
	        android:layout_marginLeft="@dimen/com_dp_10"
	        android:layout_marginRight="@dimen/com_dp_10"
	        android:gravity="center"
	        android:orientation="horizontal" >

			<GridView
			    android:id="@+id/gv_Real_time_hot_spot"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:numColumns="2" >
			</GridView>
	
	    </LinearLayout>
    </LinearLayout>
    
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/com_dp_15"
        android:orientation="vertical">
				
        <com.nq.qbr.Banner
            android:id="@+id/my_view_pager"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            daemon:changeInterval="1000"
            android:gravity="right|center_vertical"
            daemon:dotsBackground="#99999999"
            daemon:dotsBlurImage="@drawable/message_no_read"
            daemon:dotsFocusImage="@drawable/message_read"
            daemon:dotsSpacing="5dp"
            daemon:dotsViewHeight="30dp" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/com_dp_15"
        android:orientation="vertical">
				
            <ImageView
                android:id="@+id/ib"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
                android:src="@drawable/image1" />
    </LinearLayout>
</LinearLayout>
</ScrollView>